<div class="header">
    <div class="header-content">
        <img src="/images/bethel_logo.jpeg" alt="Bethel Logo" class="print-logo">
        <h2 class="location"><%= location %> Sermon Notes</h2>
    </div>
</div>

<%- content %>

<style>
    .header {
        margin-bottom: 1.5em;
        padding-bottom: 0.8em;
        border-bottom: 1px solid #ddd;
    }

    .header-content {
        display: flex;
        align-items: center;
        gap: 1em;
    }

    .print-logo {
        height: 50px;
        width: auto;
    }

    .location {
        font-size: 1.1em;
        color: #555;
        margin: 0;
        font-weight: 500;
    }

    body {
        font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
        line-height: 1.5;
        color: #333;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-size: 0.95rem;
    }

    h1 {
        font-size: 1.6em;
        margin-top: 1.2em;
        margin-bottom: 0.4em;
    }

    h2 {
        font-size: 1.4em;
        margin-top: 1em;
        margin-bottom: 0.4em;
        color: #222;
    }

    h3 {
        font-size: 1.2em;
        margin-top: 0.8em;
        margin-bottom: 0.3em;
        color: #222;
    }

    p {
        margin-bottom: 0.8em;
    }

    ul, ol {
        padding-left: 1.8em;
        margin-bottom: 0.8em;
    }

    li {
        margin-bottom: 0.3em;
    }

    hr {
        border: none;
        border-top: 1px solid #ddd;
        margin: 1.5em 0;
    }

    @media print {
        .header {
            margin-bottom: 1.2em;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        /* Force background colors and images to print */
        * {
            -webkit-print-color-adjust: exact !important;
            print-color-adjust: exact !important;
        }

        /* Basic header protection */
        h1, h2, h3 {
            break-inside: avoid;
            page-break-inside: avoid;
        }

        /* Keep lists with their headers */
        h1 + ul, h2 + ul, h3 + ul,
        h1 + ol, h2 + ol, h3 + ol {
            break-before: avoid;
            page-break-before: avoid;
        }

        /* Prevent orphaned headers at bottom of page */
        @page {
            size: letter portrait;
            margin: 0.5in;
            orphans: 3;
            widows: 3;
        }

        /* Add some spacing after headers */
        h1, h2, h3 {
            margin-bottom: 0.6em;
        }

        body {
            padding: 0;
            margin: 0;
            -webkit-print-color-adjust: exact;
        }

        /* Hide all headers and footers */
        @top-left { content: none !important; }
        @top-center { content: none !important; }
        @top-right { content: none !important; }
        @bottom-left { content: none !important; }
        @bottom-center { content: none !important; }
        @bottom-right { content: none !important; }

        /* Ensure backgrounds print */
        html, body {
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
            background-color: white !important;
        }
    }
</style>

<script>
    // Remove title and ensure clean print dialog
    document.title = '';
    window.onbeforeprint = function() {
        document.title = '';
    };

    // Additional attempt to remove URL from print
    if (window.matchMedia) {
        const mediaQueryList = window.matchMedia('print');
        mediaQueryList.addListener(function(mql) {
            if (mql.matches) {
                document.title = '';
            }
        });
    }
</script>